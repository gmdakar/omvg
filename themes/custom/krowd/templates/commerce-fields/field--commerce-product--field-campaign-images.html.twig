{% set i = 0 %}
<div{{ attributes }}>
  {%- for item in items -%}
    {% set i = i + 1 %}
      {% if i == 1 %}
        <div class="image-item">
          <a href="{{file_url(item.content['#item'].entity.uri.value)}}" class="zoomGallery" title="" data-rel="lightGallery">
            <span class="icon-expand"><i class="gv-icon-465"></i></span>
            <img src="{{file_url(item.content['#item'].entity.uri.value|image_style('thumbnail'))}}" alt=""  class="d-none" />
          </a>
          {{ item.content }}
        </div>
      {% else %}
        <div class="image-item">
          <a href="{{file_url(item.content['#item'].entity.uri.value)}}" class="zoomGallery d-none" title="" data-rel="lightGallery">
            <img src="{{file_url(item.content['#item'].entity.uri.value|image_style('thumbnail'))}}" alt=""  class="d-none" />
          </a>
        </div>
      {% endif %}
  {%- endfor -%}
</div>

