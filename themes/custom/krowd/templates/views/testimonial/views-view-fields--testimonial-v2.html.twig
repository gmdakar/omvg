<article class="testimonial-node-v2">      
   <div class="testimonial-content"> 
      <span class="line-1"></span><span class="line-2"></span>  
      <div class="content-inner"> 
         <i class="icon-quote fas fa-quote-left"></i>
         <div class="quote">
            {{ fields.body.content|striptags|trim }}
         </div>   
         <h3 class="title"> {{ fields.field_testimonial_name.content }}</h3>
         <div class="avatar">
            {{fields.field_testimonial_avatar.content }} 
         </div>  
      </div> 
   </div>
</article>
